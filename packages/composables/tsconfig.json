{
  "extends": "../../tsconfig.base.json",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "sourceMap": true,
    "importHelpers": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    }
  },
}